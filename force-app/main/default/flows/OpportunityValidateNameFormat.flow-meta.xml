    </formulas>
    <formulas>
        <name>NewUpdatedName</name>
        <dataType>String</dataType>
        <expression>{!FormatOfCurrentNameValue}+RIGHT({!$Record.Name},(LEN({!$Record.Name}) - LEN({!FormatOfPreviousNameValue})))</expression>
    </formulas>
    <formulas>
