    <formulas>
        <name>FormatOfCurrentNameValue</name>
        <dataType>String</dataType>
        <expression>{!$Record.Account.Name} + &apos;-&apos; + IF( (TEXT({!$Record.Type}) = &apos;&apos;), &apos; &apos;,TEXT({!$Record.Type})) + IF(ISBLANK({!$Record.ContractStartDate__c} ), &apos; &apos;,TEXT(YEAR({!$Record.ContractStartDate__c}))) + &apos;-&apos; + IF( (TEXT({!$Record.OfferType__c}) = &apos;&apos;), &apos; &apos;,TEXT({!$Record.OfferType__c}))</expression>
    </formulas>
    <formulas>
        <name>FormatOfPreviousNameValue</name>
