<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ProductMandatoryforStage3</fullName>
    <active>true</active>
    <errorConditionFormula>AND (NumberOfProducts__c = 0,
 ISPICKVAL(StageName, &quot;3- Qualified&quot;),
 $Permission.ByPassVR = false)</errorConditionFormula>
    <errorMessage>At least 1 opportunity product is required to move to Stage 3</errorMessage>
</ValidationRule>
